{
  "private": true,
  "name": "root",
  "version": "0.0.0",
  "description": "Mindful UI",
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='@mindful/*'",
    "dev": "dotenv -- turbo run dev",
    "publish:packages": "turbo run build lint test && changeset version && changeset publish --filter='@mindful/*'",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "keywords": [
    "react",
    "typescript",
    "react-library"
  ],
  "author": "Ivan Avila",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ivelaval/mindful-ui"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@mindful/eslint-config": "workspace:*",
    "@mindful/jest-config": "workspace:*",
    "@mindful/prettier-config": "workspace:*",
    "@mindful/rollup-config": "workspace:*",
    "@mindful/tsconfig": "workspace:*",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.4.0",
    "@types/node": "18.14.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/testing-library__jest-dom": "^5.14.5",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "lint-staged": "^13.1.2",
    "node-sass": "^8.0.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.17.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-visualizer": "^5.9.0",
    "sass": "^1.58.3",
    "ts-jest": "^29.0.5",
    "tslib": "^2.5.0",
    "turbo": "^1.8.3",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint"
    ],
    "packages/**/*.{js,ts,jsx,tsx}": [
      "eslint"
    ]
  }
}
