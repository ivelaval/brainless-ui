{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "module": "ESNext",
    "declarationDir": "lib",
    "baseUrl": "src",
    "outDir": "lib",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": ["**/*.d.ts", "**/*.tsx", "**/*.ts"]
}
