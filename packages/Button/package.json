{
  "name": "@mindful/button.react",
  "version": "0.1.1",
  "description": "Mindful UI: Button component for React",
  "main": "./lib/cjs/index.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/**",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf lib && sass --no-source-map --style=compressed src:lib && rollup -c",
    "build:watch": "rm -rf lib && rollup -c --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "tsc --noEmit && eslint \"**/*.{ts,tsx,js,jsx}\" --cache --max-warnings=0",
    "lint:fix": "eslint *.ts{,x} --fix"
  },
  "keywords": [
    "@mindful/button.react",
    "react",
    "typescript",
    "react-library",
    "button"
  ],
  "author": "Ivan Avila (ivelavalm)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ivelaval/mindful-ui"
  },
  "bugs": {
    "url": "https://github.com/ivelaval/mindful-ui/issues"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "18.14.1",
    "typescript": "^4.9.5"
  },
  "publishConfig": {
    "registry": "public"
  }
}
